{
  "name": "capicoin",
  "version": "1.0.0",
  "description": "Token BEP-20 en Binance Smart Chain enfocado en sustentabilidad y donaciones a refugios de animales",
  "main": "truffle-config.js",
  "private": true,
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test",
    "test:coverage": "truffle run coverage",
    "deploy:testnet": "truffle migrate --network bscTestnet",
    "deploy:mainnet": "truffle migrate --network bscMainnet",
    "verify": "truffle run verify",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "blockchain",
    "bep20",
    "binance-smart-chain",
    "cryptocurrency",
    "defi",
    "sustainability",
    "animal-welfare"
  ],
  "author": "CapiCoin Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.20.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CripterHack/CapiCoin.git"
  },
  "bugs": {
    "url": "https://github.com/CripterHack/CapiCoin/issues"
  },
  "homepage": "https://github.com/CripterHack/CapiCoin#readme",
  "devDependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@truffle/hdwallet-provider": "^2.1.15",
    "chai": "^4.5.0",
    "truffle": "^5.11.5",
    "solhint": "^3.4.1",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "truffle-plugin-verify": "^0.6.5",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "bip39": "^3.1.0",
    "dotenv": "^16.4.7",
    "web3": "^1.10.0"
  }
}
